<idea-plugin version="2">
    <id>ro-idea</id>
    <name>ro-idea</name>
    <version>1.1.3</version>
    <vendor email="chinococoadesu@gmail.com" url="https://github.com/roroco/ro-idea"></vendor>

    <description><![CDATA[
<b>features:</b>
one key navigate to test file without "create new test" dialog
    ]]></description>

    <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
    </change-notes>

    <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="139"/>

    <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <application-components>
        <!-- Add your application components here -->
    </application-components>

    <project-components>
        <!-- Add your project components here -->
    </project-components>

    <actions>
        <group id="RoIdea" text="RoIdea" description="">
            <add-to-group group-id="MainMenu" anchor="last"/>
        </group>

        <action id="TryAct" class="ro.idea.TryAct" text="Try Act" description="try openapi">
            <add-to-group group-id="RoIdea" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl alt P"/>
        </action>
        <action id="RestartDbgConsole" class="ro.idea.RestartDbgConsole" text="Restart Debug Console">
            <add-to-group group-id="RoIdea" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl I"/>
        </action>
        <action id="RestartRunConsole" class="ro.idea.RestartRunConsole" text="Restart Run Console">
            <add-to-group group-id="RoIdea" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="alt C"/>
        </action>

        <action id="ToggleFile" class="ro.idea.ToggleFile" text="Toggle File">
            <add-to-group group-id="RoIdea" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl T"/>
        </action>
        <action id="TryAct2" class="ro.idea.TryAct2" text="Try Act 2" description="">
            <add-to-group group-id="RoIdea" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl alt P"/>
        </action>
        <action id="ToggleDbgTab-ActivateDbg" class="ro.idea.toggleDbgTab.ActivateDbg" text="Toggle Dbg Tab - Activate Dbg">
            <add-to-group group-id="RoIdea" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl alt R"/>
        </action>
        <action id="ToggleDbgTab-ToggleTab" class="ro.idea.toggleDbgTab.ToggleTab" text="Toggle Dbg Tab - Toggle Tab">
            <add-to-group group-id="RoIdea" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl alt T"/>
        </action>
        <action id="ToggleDbg" class="ro.idea.ToggleDbg" text="Toggle Dbg">
            <add-to-group group-id="RoIdea" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="alt T"/>
        </action>
        <action id="ToggleRun" class="ro.idea.ToggleRun" text="Toggle Run">
            <add-to-group group-id="RoIdea" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="alt G"/>
        </action>
    </actions>
</idea-plugin>
